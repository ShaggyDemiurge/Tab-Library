{
  "manifest_version": 3,

  "name": "Tab Library",
  "description": "Tab Library is a tab and bookmark manager that turns tab hoard into organized, tagged and tracked library for future use, with different ways to handle `Read later` pages",
  "version": "0.0.1",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "js": [
        "browser-polyfill.min.js",
        "content_script.js"
      ]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "background"
  ]
}